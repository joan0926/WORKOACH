<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- 상단 제목 -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저축 중심 코칭"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 목표액 + 현재 금액 컨테이너 -->
    <LinearLayout
        android:id="@+id/goalContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FCFBF3"
        android:padding="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#FCFBF3"
        android:clipToPadding="false">

        <!-- 목표액 텍스트 -->
        <TextView
            android:id="@+id/goalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목표액 1,234,567 원"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- 현재 모은 금액 텍스트 -->
        <TextView
            android:id="@+id/currentAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 모은 금액: 1,000,000원"
            android:layout_marginTop="4dp"
            android:textSize="14sp"/>

        <!-- ProgressBar -->
        <ProgressBar
            android:id="@+id/moneyBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/money_progress"/>
    </LinearLayout>

    <!-- 목표 달성 여부 + 저축 등록 버튼 한 줄 -->
    <LinearLayout
        android:id="@+id/goalActionContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/goalContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/goalStatus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="오늘 목표액 저축이 완료되지 않았어요!"
            android:textSize="14sp"
            android:gravity="start"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F3EFC9"
            android:textColor="#145127"
            android:text="저축 등록"/>
    </LinearLayout>

    <!-- 우리 상품 추천 타이틀 -->
    <TextView
        android:id="@+id/recommendedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우리 상품 추천"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/goalActionContainer"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 상품 추천 가로 스크롤 -->
    <HorizontalScrollView
        android:id="@+id/productScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/recommendedTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/productContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <!-- 샘플 상품 카드 1 -->
            <LinearLayout
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FCFBF3"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="적금"
                    android:textColor="@android:color/white"
                    android:background="#349352"
                    android:padding="4dp"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/woori"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerInside"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="우리은행"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.95%"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WON적금"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/productButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#F3EFC9"
                    android:text="상품 자세히 보기"
                    android:textColor="#145127"/>
            </LinearLayout>

            <!-- 샘플 상품 카드 2 동일하게 복제 가능 -->
            <LinearLayout
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FCFBF3"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="적금"
                    android:textColor="@android:color/white"
                    android:background="#349352"
                    android:padding="4dp"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/woori"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerInside"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="우리은행"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.95%"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WON적금"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/productButton3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#F3EFC9"
                    android:text="상품 자세히 보기"
                    android:textColor="#145127"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:id="@+id/studyCardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/productScroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
