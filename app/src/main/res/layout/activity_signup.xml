<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:foregroundTint="#000000"
    tools:context=".SignupActivity">

    <TextView
        android:id="@+id/text_ProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_text_button"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="프로필 만들기"
        android:fontFamily="@font/semi_bold"
        android:textSize="16dp"
        android:textColor="@color/Primary800"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_IdTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="아이디"
        android:fontFamily="@font/semi_bold"
        android:textSize="16dp"
        android:textColor="@color/Primary800"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_ProfileTitle"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/text_Id"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext_outline"
        android:ems="10"
        android:gravity="center"
        android:hint="아이디를 입력하세요"
        android:inputType="text"
        android:fontFamily="@font/medium"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_IdTitle" />

    <TextView
        android:id="@+id/text_PasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="비밀번호"
        android:fontFamily="@font/semi_bold"
        android:textSize="16dp"
        android:textColor="@color/Primary800"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Id" />

    <EditText
        android:id="@+id/text_Password"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext_outline"
        android:ems="10"
        android:gravity="center"
        android:hint="비밀번호를 입력하세요"
        android:inputType="textPassword"
        android:fontFamily="@font/medium"
        android:textSize="12dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_PasswordTitle" />


    <TextView
        android:id="@+id/text_PasswordConfirmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="비밀번호 확인"
        android:fontFamily="@font/semi_bold"
        android:textSize="16dp"
        android:textColor="@color/Primary800"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Password" />

    <EditText
        android:id="@+id/text_PasswordConfirm"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext_outline"
        android:ems="10"
        android:gravity="center"
        android:hint="비밀번호를 한 번 더 입력하세요"
        android:inputType="textPassword"
        android:fontFamily="@font/medium"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_PasswordConfirmTitle" />

    <TextView
        android:id="@+id/text_NameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="이름"
        android:fontFamily="@font/semi_bold"
        android:textSize="16dp"
        android:textColor="@color/Primary800"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_PasswordConfirm" />

    <EditText
        android:id="@+id/text_Name"
        android:layout_width="0dp"
        android:layout_height="44dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext_outline"
        android:ems="10"
        android:gravity="center"
        android:hint="이름을 입력하세요"
        android:inputType="text"
        android:fontFamily="@font/medium"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_NameTitle" />

    <TextView
        android:id="@+id/text_DateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="취직일"
        android:fontFamily="@font/semi_bold"
        android:textSize="16dp"
        android:textColor="@color/Primary800"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Name" />

    <EditText
        android:id="@+id/text_Date"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext_outline"
        android:clickable="true"
        android:ems="10"
        android:focusable="false"
        android:gravity="center"
        android:inputType="none"
        android:fontFamily="@font/medium"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_DateTitle" />

    <Button
        android:id="@+id/button_Profile"
        android:layout_width="156dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/Secondary600"
        android:text="프로필 등록하기"
        android:textColor="@color/Primary700"
        app:cornerRadius="8dp"
        android:fontFamily="@font/medium"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_Date" />


</androidx.constraintlayout.widget.ConstraintLayout>