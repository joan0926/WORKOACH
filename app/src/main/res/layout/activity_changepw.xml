<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/btnclose_changepw"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_close_bg"
        android:backgroundTint="@null"
        android:scaleType="centerInside"
        android:src="@drawable/ic_close"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/changepw_header"
        android:layout_width="142dp"
        android:layout_height="30dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="89dp"
        android:fontFamily="@font/semi_bold"
        android:gravity="center"
        android:text="계정 관리"
        android:textColor="@color/Primary800"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/originpw"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_width="140dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/semi_bold"
        android:text="기존 비밀번호 입력"
        android:textColor="@color/Primary800"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnclose_changepw" />

    <EditText
        android:id="@+id/Textoriginpw"
        android:layout_width="296dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext_outline"
        android:ems="10"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:hint="비밀번호를 입력하세요"
        android:inputType="textPassword"
        android:textColorHint="@color/TextSecondary"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/originpw" />

    <TextView
        android:id="@+id/newpw"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_width="90dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/semi_bold"
        android:text="새 비밀번호"
        android:textColor="@color/Primary800"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Textoriginpw" />

    <EditText
        android:id="@+id/Textnewpw"
        android:layout_width="296dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext_outline"
        android:ems="10"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:hint="새 비밀번호를 입력하세요"
        android:inputType="textPassword"
        android:textColorHint="@color/TextSecondary"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newpw" />

    <TextView
        android:id="@+id/newpw_confirm"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_width="95dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/semi_bold"
        android:text="비밀번호 확인"
        android:textColor="@color/Primary800"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Textnewpw" />

    <EditText
        android:id="@+id/Textnewpw_confirm"
        android:layout_width="296dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext_outline"
        android:ems="10"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:hint="새 비밀번호를 한 번 더 입력하세요"
        android:inputType="textPassword"
        android:textColorHint="@color/TextSecondary"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newpw_confirm" />

    <Button
        android:id="@+id/btn_changepw"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="380dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/Secondary600"
        android:fontFamily="@font/medium"
        android:text="비밀번호 변경하기"
        android:textColor="@color/Primary700"
        android:textSize="12dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>