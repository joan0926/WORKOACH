<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <!-- 제목 -->
    <TextView
        android:id="@+id/moneyBar_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_text_button"
        android:padding="6dp"
        android:text="나의 잔고"
        android:textColor="@color/Secondary300"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/moneyBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginTop="12dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/money_progress"
        app:layout_constraintTop_toBottomOf="@id/moneyBar_Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 퍼센트 -->
    <TextView
        android:id="@+id/tvPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/moneyBar"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 버튼 -->
    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="월급 수정"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
