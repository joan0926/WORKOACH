<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <!-- 나의 잔고 -->
    <TextView
        android:id="@+id/moneyBar_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_text_button"
        android:padding="6dp"
        android:text="나의 잔고"
        android:textColor="@color/Secondary300"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/moneyBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginTop="12dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/money_progress"
        app:layout_constraintTop_toBottomOf="@id/moneyBar_Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 퍼센트 -->
    <TextView
        android:id="@+id/tvPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/moneyBar"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 전체 -->
    <LinearLayout
        android:id="@+id/layout_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvPercent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/label_total"
            android:layout_width="84dp"
            android:layout_height="30dp"
            android:background="#ECE69C"
            android:gravity="center"
            android:text="전체"
            android:textColor="#145127"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvTotalMoney"
            android:layout_width="232dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/box_money_border"
            android:gravity="center_vertical|end"
            android:paddingEnd="12dp"
            android:text="1,540,000 원"
            android:textSize="13sp"/>
    </LinearLayout>

    <!-- 소비액 -->
    <LinearLayout
        android:id="@+id/layout_spent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/layout_total"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/label_spent"
            android:layout_width="84dp"
            android:layout_height="30dp"
            android:background="#349352"
            android:gravity="center"
            android:text="소비액"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvSpentMoney"
            android:layout_width="232dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/box_money_border"
            android:gravity="center_vertical|end"
            android:paddingEnd="12dp"
            android:text="1,340,000 원"
            android:textSize="13sp"/>
    </LinearLayout>

    <!-- 잔액 -->
    <LinearLayout
        android:id="@+id/layout_remain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/layout_spent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/label_remain"
            android:layout_width="84dp"
            android:layout_height="30dp"
            android:background="#97D4AB"
            android:gravity="center"
            android:text="잔액"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvRemainMoney"
            android:layout_width="232dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/box_money_border"
            android:gravity="center_vertical|end"
            android:paddingEnd="12dp"
            android:text="200,000 원"
            android:textSize="13sp"/>
    </LinearLayout>

    <!-- 수입 등록 -->
    <Button
        android:id="@+id/btnIncome"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text="수입 등록"
        android:textColor="#145127"
        android:backgroundTint="#F3EFC9"
        app:layout_constraintTop_toBottomOf="@id/layout_remain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnOutgoing"
        app:layout_constraintHorizontal_weight="1"/>

    <!-- 지출 등록 -->
    <Button
        android:id="@+id/btnOutgoing"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:text="지출 등록"
        android:textColor="#145127"
        android:backgroundTint="#F3EFC9"
        app:layout_constraintTop_toBottomOf="@id/layout_remain"
        app:layout_constraintStart_toEndOf="@id/btnIncome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>
